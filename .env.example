# Variables d'environnement - Exemple
# Copiez ce fichier en .env et configurez selon vos besoins
# ATTENTION : Ne committez JAMAIS le fichier .env dans Git !

# ===================================
# APPLICATION
# ===================================
SPRING_APPLICATION_NAME=starter-api
SERVER_PORT=8080

# ===================================
# DATABASE - MySQL
# ===================================
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/starterdb?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=password
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# ===================================
# JPA / Hibernate
# ===================================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.MySQL8Dialect
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# ===================================
# LOGGING
# ===================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_FR_TIOGARS_STARTER=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE=INFO

# ===================================
# ACTUATOR
# ===================================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,env,beans
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# ===================================
# SPRINGDOC / SWAGGER
# ===================================
SPRINGDOC_API_DOCS_PATH=/api-docs
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html
SPRINGDOC_SWAGGER_UI_ENABLED=true

# ===================================
# PROFIL (dev, test, prod)
# ===================================
SPRING_PROFILES_ACTIVE=dev

# ===================================
# CONFIGURATION MAVEN (pour CI/CD)
# ===================================
# Ces variables sont utilisées par le workflow GitHub Actions
# Elles ne sont pas nécessaires en local si vous avez configuré settings.xml

# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxx
# GITHUB_ACTOR=votre-username

# ===================================
# DOCKER
# ===================================
# Configuration pour docker-compose
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=starterdb
MYSQL_USER=starter
MYSQL_PASSWORD=starter123
